
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isOneOfRoles(roles) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in roles;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Collection: users
    match /users/{userId} {
      allow read: if isOwner(userId) || isOneOfRoles(['PIC', 'Admin', 'MasterAdmin']);
      allow update: if isOwner(userId) || isOneOfRoles(['MasterAdmin']);
      allow create, delete: if isOneOfRoles(['MasterAdmin']);
    }

    // Collection: approval_requests
    match /approval_requests/{requestId} {
      allow read: if isOwner(resource.data.requestedByUid) || isOneOfRoles(['MasterAdmin']);
      allow create: if isOneOfRoles(['Admin']);
      allow update: if isOneOfRoles(['MasterAdmin']);
    }

    // Collection: notifications
    match /notifications/{notificationId} {
        allow read, update: if isOneOfRoles(['MasterAdmin']);
        allow create: if request.auth != null;
    }
    
    // Collection: attendance
    // A kurir can write to their own attendance doc.
    // They can read their own documents. Managers can read any.
    match /attendance/{attendanceId} {
        allow read: if isOwner(resource.data.kurirUid) || isOneOfRoles(['PIC', 'Admin', 'MasterAdmin']);
        allow write: if isOwner(request.resource.data.kurirUid);
    }
    
    // Collection: kurir_daily_tasks
    // A kurir can write to their own daily task doc.
    // They can read their own task doc. Managers can read any.
    match /kurir_daily_tasks/{taskId} {
      allow read: if isOwner(resource.data.kurirUid) || isOneOfRoles(['PIC', 'Admin', 'MasterAdmin']);
      allow write: if isOwner(request.resource.data.kurirUid);
      
      // Sub-collection: packages
      // Only the owner of the parent task can read/write packages.
      match /packages/{packageId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/kurir_daily_tasks/$(taskId)).data.kurirUid);
      }
    }
  }
}
