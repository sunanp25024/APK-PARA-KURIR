
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Izinkan operasi baca dan tulis jika pengguna sudah login.
    // Ini adalah aturan dasar yang aman untuk tahap pengembangan.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
